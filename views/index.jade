extends layout

block content
    #header
    #app
    #footer


    h1= title
    p Welcome to #{title}

    if user
        p id: #{user._id}
        p user: #{user.username}
        p email: #{user.email}
        p admin: #{user.admin}


    div(ng-controller="HelloController")
        input(ng-model="greeting.text")
        p {{greeting.text}}, World

    div(ng-controller='CartController')
        div(ng-repeat='item in items')
            span {{item.title}}
            input(ng-model='item.quantity')
            span {{item.price | currency}}
            span {{item.price * item.quantity | currency}}
            button(ng-click='remove($index)') Remove
